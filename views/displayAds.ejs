<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display Ads</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: #e0e0e0;
            margin: 0;
            padding: 0;
        }
        h1 {
            text-align: center;
            color: #4caf50;
        }
        .ad-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin: 20px;
        }
        .ad-item {
            width: 300px;
            margin: 10px;
            padding: 15px;
            border: 1px solid #4caf50;
            border-radius: 10px;
            background-color: #1c1c1c;
            text-align: center;
        }
        video {
            max-width: 100%;
            border-radius: 10px;
        }
        button {
            background-color: #4caf50;
            color: white;
            border: none;
            padding: 10px;
            margin-top: 10px;
            cursor: pointer;
        }
        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1>Display Ads</h1>
    <div class="ad-container">
        <% ads.forEach(ad => { %>
        <div class="ad-item">
            <h3><%= ad.companyName %></h3>
            <p><%= ad.description %></p>
            <video controls>
                <source src="file:///C:\Users\1by22\OneDrive\Desktop\tttt\<%= ad.content %>" type="video/mp4">
                Your browser does not support the video tag.
            </video>
            <button onclick="playFullscreen('<%= ad.content %>')">Fullscreen</button>
        </div>
        <% }); %>
    </div>

    <script>
        function playFullscreen(adFile) {
            const video = document.createElement('video');
            video.src = `/${adFile}`;
            video.controls = true;
            video.style.position = 'fixed';
            video.style.top = '0';
            video.style.left = '0';
            video.style.width = '100vw';
            video.style.height = '100vh';
            video.style.zIndex = '1000';
            video.style.backgroundColor = '#000';

            document.body.appendChild(video);
            video.play();

            video.addEventListener('ended', () => {
                video.remove();
            });

            video.addEventListener('click', () => {
                video.remove();
            });
        }
    </script>
</body>
</html>
